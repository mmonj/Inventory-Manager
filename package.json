{
  "name": "inventory-manager",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "uv run python manage.py runserver 0.0.0.0:${DJANGO_PORT:?}",
    "client:typecheck": "tsc --noEmit",
    "client:format": "prettier --write 'client/**/*.ts' 'client/**/*.tsx'",
    "client:lint": "eslint 'client/**/*.{ts,tsx}'",
    "app:generate_types": "uv run python manage.py generate_client_assets",
    "app:check": "uv run python manage.py check",
    "python:typecheck": "uv run mypy .",
    "python:format": "uv run ruff format .",
    "python:lint": "uv run ruff check .",
    "python:lint:fix": "uv run ruff check . --fix",
    "sass:build": "sass --no-source-map --style=compressed --load-path=node_modules client/scss:static/styles",
    "sass:watch": "sass --no-source-map --style=compressed --load-path=node_modules --watch client/scss:static/styles"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@fortawesome/free-regular-svg-icons": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.1.0",
    "@types/leaflet": "^1.9.21",
    "@types/react-router-dom": "^5.3.3",
    "bootstrap": "^5.3.8",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.24",
    "html5-qrcode": "^2.3.8",
    "leaflet": "^1.9.4",
    "react-bootstrap": "^2.10.10",
    "react-json-view-lite": "^2.5.0",
    "react-leaflet": "^5.0.0",
    "react-router-dom": "^7.9.5",
    "react-select": "^5.10.2",
    "reactivated": "^0.47.4",
    "sass": "^1.93.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^6.0.0"
  }
}
