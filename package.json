{
  "name": "inventory-manager",
  "scripts": {
    "dev": "uv run python manage.py runserver 0.0.0.0:${DJANGO_DEV_PORT:?}",
    "client:typecheck": "tsc --noEmit",
    "client:format": "prettier --write 'client/**/*.ts' 'client/**/*.tsx'",
    "server:check": "uv run python manage.py check",
    "server:typecheck": "uv run mypy .",
    "server:format": "uv run ruff format .",
    "server:lint": "uv run ruff check .",
    "server:lint:fix": "uv run ruff check . --fix",
    "server:generate_types": "uv run python manage.py generate_client_assets",
    "server:build": "uv run python manage.py generate_client_assets && uv run python manage.py build",
    "server:start": "uv run uvicorn server.asgi:application --host 0.0.0.0 --port ${DJANGO_DEPLOY_PORT:?}",
    "server:deploy": "uv run bash -c 'python manage.py migrate && python manage.py collectstatic --clear --noinput && npm run server:build && npm run server:start'",
    "sass:build": "sass --no-source-map --style=compressed --load-path=node_modules client/scss:static/styles",
    "sass:watch": "sass --no-source-map --style=compressed --load-path=node_modules --watch client/scss:static/styles"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-regular-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@types/leaflet": "^1.9.4",
    "@types/react-router-dom": "^5.3.3",
    "bootstrap": "^5.3.0",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.16.4",
    "html5-qrcode": "^2.3.8",
    "leaflet": "^1.9.4",
    "react-bootstrap": "^2.8.0",
    "react-json-view-lite": "^1.0.0",
    "react-leaflet": "^4.2.1",
    "react-router-dom": "^6.16.0",
    "react-select": "^5.7.4",
    "reactivated": "^0.30.2",
    "sass": "^1.94.0",
    "zod": "^3.21.4"
  }
}
